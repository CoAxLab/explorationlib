
# Parameter sweeps in an attempt to reproduce the results of 
# 1.Viswanathan, G. M. et al. Optimizing the success of random searches. 
# Nature 401, 911â€“914 (1999).

# Levy2 v Diffusion 1
# 500 targets
viswanathan500a:
	python ../explorationlib/run.py experiment viswanathan500a_levy2.pkl Levy2d ViswanathanField500 --num_steps=50000 --num_experiments=500
	python ../explorationlib/run.py experiment viswanathan500a_diff.pkl Diffusion2d ViswanathanField500 --num_steps=50000 --num_experiments=500

viswanathan500b:
	python ../explorationlib/run.py experiment viswanathan500b_levy2.pkl Levy2d ViswanathanField500 --num_steps=50000 --num_experiments=500
	python ../explorationlib/run.py experiment viswanathan500b_diff.pkl Diffusion2d ViswanathanField500 --num_steps=50000 --num_experiments=500

viswanathan500c:
	python ../explorationlib/run.py experiment viswanathan500c_levy2.pkl Levy2d ViswanathanField500 --num_steps=50000 --num_experiments=500
	python ../explorationlib/run.py experiment viswanathan500c_diff.pkl Diffusion2d ViswanathanField500 --num_steps=50000 --num_experiments=500

